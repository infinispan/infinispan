<infinispan>
   <cache-container>
      <distributed-cache name="customers">
         <backups>
            <backup site="NYC"
                    strategy="ASYNC"
                    timeout="10s">
               <take-offline after-failures="5"
                             min-wait="15000"/>
            </backup>
         </backups>
      </distributed-cache>
   </cache-container>
</infinispan>