{
  "server": {
    "security": {
      "providers": [
        {
          "class-name": "sun.security.pkcs11.SunPKCS11",
          "configuration": "/path/to/keystore-pkcs11.cfg"
        },
        {
          "class-name": "sun.security.pkcs11.SunPKCS11",
          "configuration": "/path/to/truststore-pkcs11.cfg"
        }
      ],
      "security-realms": [{
        "name": "default",
        "server-identities": {
          "ssl": {
            "keystore": {
              "provider": "SunPKCS11-keystore",
              "type": "PKCS11"
            },
            "truststore": {
              "provider": "SunPKCS11-truststore",
              "type": "PKCS11"
            }
          }
        }
      }]
    }
  }
}
