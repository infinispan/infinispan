<infinispan>
   <cache-container default-cache="secured" name="secured">
      <security>
         <!-- Configure authorization to control access to caches using the default role mapper, roles and permissions. -->
         <authorization />
      </security>
      <local-cache name="secured">
         <security>
            <!-- Implicitly define authorization. -->
            <!-- All roles in the cache-container can access the cache. -->
            <authorization/>
         </security>
      </local-cache>
   </cache-container>
</infinispan>
