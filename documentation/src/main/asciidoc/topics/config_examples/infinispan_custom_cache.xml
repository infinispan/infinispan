<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:{infinispanversion} https://infinispan.org/schemas/infinispan-config-{infinispanversion}.xsd"
        xmlns="urn:infinispan:config:{infinispanversion}">

   <cache-container default-cache="default">
       <local-cache name="xml-configured-cache">
          <memory>
            <object size="100"/>
          </memory>
       </local-cache>
   </cache-container>

</infinispan>
