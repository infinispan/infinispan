                  <lineEnding>dos</lineEnding>
                  <includes>
                     <include>**/*.cmd</include>
                     <include>**/*.bat</include>
                  </includes>
                  <fileMode>0644</fileMode>
               </fileSet>


               <!-- EULAs and license files -->
