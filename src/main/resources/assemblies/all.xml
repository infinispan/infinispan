                     <exclude>**/*.cmd</exclude>
                     <exclude>**/*.py</exclude>
                     <exclude>**/*.rb</exclude>
                     <exclude>**/infinispan-module.properties</exclude>
                     <exclude>**/*.dat.gz</exclude>
