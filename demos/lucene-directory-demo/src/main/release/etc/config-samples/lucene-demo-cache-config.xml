<?xml version="1.0" encoding="UTF-8"?>
<infinispan
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="urn:infinispan:config:9.1 http://www.infinispan.org/schemas/infinispan-config-9.1.xsd"
   xmlns="urn:infinispan:config:9.1">

   <cache-container default-cache="default">
      <transport cluster="luceneDemoCluster"/>
      <distributed-cache name="default" mode="SYNC" l1-lifespan="60000" owners="2" statistics="true" >
        <locking striping="false"/>
        <transaction mode="BATCH"/>
      </distributed-cache>
   </cache-container>

</infinispan>
