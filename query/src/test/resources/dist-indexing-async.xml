<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:${infinispan.core.schema.version} https://infinispan.org/schemas/infinispan-config:${infinispan.core.schema.version}"
        xmlns="urn:infinispan:config:${infinispan.core.schema.version}">

    <cache-container name="QueryEnabledGrid-Dist" default-cache="default" statistics="false">
        <serialization>
            <context-initializer class="org.infinispan.query.test.QueryTestSCIImpl"/>
        </serialization>
        <transport cluster="Infinispan-Query-Cluster"/>

        <distributed-cache name="default" mode="SYNC" remote-timeout="20000" statistics="true">
            <indexing>
                <indexed-entities>
                    <indexed-entity>org.infinispan.query.test.Transaction</indexed-entity>
                </indexed-entities>
                <property name="directory.type">local-heap</property>
                <property name="hibernate.search.background_failure_handler">org.infinispan.query.helper.StaticTestingErrorHandler</property>
            </indexing>
        </distributed-cache>

        <replicated-cache name="LuceneIndexesMetadata" mode="SYNC" remote-timeout="25000">
            <indexing enabled="false"/>
            <state-transfer enabled="true"/>
        </replicated-cache>

        <distributed-cache name="LuceneIndexesData" mode="SYNC" remote-timeout="25000">
            <indexing enabled="false"/>
            <state-transfer enabled="true"/>
        </distributed-cache>

        <replicated-cache name="LuceneIndexesLocking" mode="SYNC" remote-timeout="25000">
            <indexing enabled="false"/>
        </replicated-cache>
    </cache-container>
</infinispan>
