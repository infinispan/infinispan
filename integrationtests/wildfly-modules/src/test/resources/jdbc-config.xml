<?xml version="1.0" encoding="UTF-8"?>
<infinispan
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="urn:infinispan:config:9.1 http://www.infinispan.org/schemas/infinispan-config-9.1.xsd
   urn:infinispan:config:store:jdbc:9.0 http://www.infinispan.org/schemas/infinispan-cachestore-jdbc-config-9.0.xsd"
   xmlns="urn:infinispan:config:9.1"
   xmlns:jdbc="urn:infinispan:config:store:jdbc:9.0">

  <cache-container default-cache="default">
    <local-cache name="default">
      <locking isolation="REPEATABLE_READ"
               acquire-timeout="20000" write-skew="false"
               concurrency-level="500" striping="false" />
    </local-cache>
    <local-cache name="anotherCache">
      <persistence passivation="false">
        <jdbc:string-keyed-jdbc-store>
          <jdbc:string-keyed-table prefix="ISPN">
            <jdbc:id-column name="K" type="VARCHAR(255)"/>
            <jdbc:data-column name="V" type="BLOB"/>
            <jdbc:timestamp-column name="T" type="BIGINT"/>
          </jdbc:string-keyed-table>
          <jdbc:data-source jndi-url="java:jboss/datasources/ExampleDS"/>
        </jdbc:string-keyed-jdbc-store>
      </persistence>
    </local-cache>
  </cache-container>

</infinispan>
