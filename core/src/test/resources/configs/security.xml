<?xml version="1.0" encoding="UTF-8"?>
<infinispan
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:infinispan:config:9.1 http://www.infinispan.org/schemas/infinispan-config-9.1.xsd"
      xmlns="urn:infinispan:config:9.1">

   <cache-container name="default" default-cache="secured">
      <security>
         <authorization>
            <identity-role-mapper/>
            <role name="admin" permissions="ALL" />
            <role name="reader" permissions="READ" />
            <role name="writer" permissions="WRITE" />
            <role name="supervisor" permissions="READ WRITE EXEC"/>
         </authorization>
      </security>
      <jmx duplicate-domains="true"/>

      <local-cache name="secured">
         <security>
            <authorization enabled="true" roles="admin reader writer" />
         </security>
      </local-cache>
   </cache-container>

</infinispan>
