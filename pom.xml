                           <javadocDirectory>${basedir}/src/javadoc</javadocDirectory>
                           <docfilessubdirs>true</docfilessubdirs>
                           <links>
                              <link>http://java.sun.com/javase/6/docs/api/</link>
                              <link>http://java.sun.com/javaee/5/docs/api/</link>
                           </links>
                           <footer><![CDATA[
