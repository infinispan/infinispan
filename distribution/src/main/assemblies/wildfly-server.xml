<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
   <id>wildfly-server</id>
   <formats>
      <format>zip</format>
   </formats>

   <includeBaseDirectory>true</includeBaseDirectory>
   <baseDirectory>${infinispan.brand.prefix}-wildfly-server-${infinispan.brand.version}</baseDirectory>

   <fileSets>
      <fileSet>
         <directory>target/classes</directory>
         <outputDirectory />
         <includes>
            <include>**/**</include>
         </includes>
      </fileSet>
      <fileSet>
         <directory>../server/integration/build/target/server-distribution-dist/${infinispan.brand.prefix}-wildfly-server-${infinispan.brand.version}</directory>
         <outputDirectory />
         <includes>
            <include>**/**</include>
         </includes>
      </fileSet>
      <fileSet>
         <directory>src/main/release/server</directory>
         <outputDirectory/>
      </fileSet>
      <fileSet>
         <directory>target/server</directory>
         <outputDirectory/>
      </fileSet>
   </fileSets>
</assembly>
