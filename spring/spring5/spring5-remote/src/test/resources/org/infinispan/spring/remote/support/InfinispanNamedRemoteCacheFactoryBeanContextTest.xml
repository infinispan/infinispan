<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean
            id="hotrodServer"
            class="org.infinispan.spring.remote.support.HotrodServerLifecycleBean"
            p:remoteCacheName="infinispanNamedRemoteCacheWithoutFurtherConfiguration"/>

    <bean
            id="infinispanRemoteCacheManager"
            class="org.infinispan.spring.remote.support.InfinispanRemoteCacheManagerFactoryBean"
            p:configurationPropertiesFileLocation="classpath:/org/infinispan/spring/remote/support/hotrod-client.properties"/>

    <bean
            id="infinispanNamedRemoteCacheWithoutFurtherConfiguration"
            class="org.infinispan.spring.remote.support.InfinispanNamedRemoteCacheFactoryBean"
            p:infinispanRemoteCacheManager-ref="infinispanRemoteCacheManager"
            p:cacheName="customCacheNameWithoutFurtherConfiguration"/>

</beans>
