<distributed-cache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="urn:infinispan:config:16.1 https://infinispan.org/schemas/infinispan-config-fragment-16.1.xsd"
                   xmlns="urn:infinispan:config:16.1" name="xcache" statistics="true">
   <encoding>
      <key media-type="application/x-protostream"/>
      <value media-type="application/x-protostream"/>
   </encoding>
   <expiration lifespan="60000"/>
   <memory max-count="1000" when-full="REMOVE"/>
</distributed-cache>
