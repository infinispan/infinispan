<infinispan>
   <cache-container>
      <distributed-cache name="qcache" statistics="true">
         <encoding>
            <key media-type="application/x-protostream"/>
            <value media-type="application/x-protostream"/>
         </encoding>
         <partition-handling when-split="DENY_READ_WRITES" />
         <indexing>
            <indexed-entities>
               <indexed-entity>org.infinispan.rest.search.entity.Person</indexed-entity>
            </indexed-entities>
         </indexing>
      </distributed-cache>
   </cache-container>
</infinispan>
