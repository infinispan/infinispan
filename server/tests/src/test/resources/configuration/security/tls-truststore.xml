<security xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="urn:infinispan:server:13.0 https://infinispan.org/schemas/infinispan-server-13.0.xsd"
          xmlns="urn:infinispan:server:13.0">
   <security-realms>
      <security-realm name="default">
         <server-identities>
            <ssl>
               <keystore path="server.pfx" password="secret" alias="server"/>
               <truststore path="ca.pfx" password="secret"/>
            </ssl>
         </server-identities>
      </security-realm>
   </security-realms>
</security>
