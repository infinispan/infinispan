<security xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="urn:infinispan:server:16.2 https://infinispan.org/schemas/infinispan-server-16.2.xsd"
          xmlns="urn:infinispan:server:16.2">
   <security-realms>
      <security-realm name="keycloak">
         <server-identities>
            <ssl>
               <truststore path="ca.pfx" password="secret"/>
            </ssl>
         </server-identities>
      </security-realm>
      <security-realm name="default">
         <token-realm name="infinispan" auth-server-url="https://${keycloak.host.address}:8443/auth/" client-id="infinispan-console">
            <oauth2-introspection client-ssl-context="keycloak"
                    introspection-url="https://${keycloak.host.address}:8443/realms/infinispan/protocol/openid-connect/token/introspect"
                    client-id="infinispan-server" client-secret="1fdca4ec-c416-47e0-867a-3d471af7050f"/>
         </token-realm>
      </security-realm>
   </security-realms>
</security>
