<security xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="urn:infinispan:server:13.0 https://infinispan.org/schemas/infinispan-server-13.0.xsd"
          xmlns="urn:infinispan:server:13.0">
   <security-realms>
      <security-realm name="default">
         <ldap-realm name="ldap" url="${org.infinispan.test.ldap.url}"
                     principal="${org.infinispan.test.ldap.principal}" credential="strongPassword">
            <identity-mapping rdn-identifier="uid" search-dn="${org.infinispan.test.ldap.search-dn}" search-recursive="true">
               <attribute-mapping>
                  <attribute from="cn" to="${org.infinispan.test.ldap.identity-mapping.attribute.to}"
                             filter="(&amp;(objectClass=groupOfNames)(member={1}))"
                             filter-dn="${org.infinispan.test.ldap.filter-dn}"/>
               </attribute-mapping>
               <user-password-mapper from="userPassword"/>
            </identity-mapping>
         </ldap-realm>
      </security-realm>
   </security-realms>
</security>
