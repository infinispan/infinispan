<cache-container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="urn:infinispan:config:16.2 https://infinispan.org/schemas/infinispan-config-fragment-16.2.xsd"
                 xmlns="urn:infinispan:config:16.2"
                 name="default" statistics="true">
   <global-state unclean-shutdown-action="IGNORE">
      <persistent-location path="${infinispan.server.data.path}"/>
      <shared-persistent-location path="${infinispan.server.data.path}"/>
      <overlay-configuration-storage/>
   </global-state>
   <transport cluster="${infinispan.cluster.name:cluster}" stack="${infinispan.cluster.stack}"/>
   <serialization>
      <allow-list>
         <regex>.*</regex>
      </allow-list>
   </serialization>
   <metrics gauges="true" histograms="true" accurate-size="true" legacy="false" />
</cache-container>
