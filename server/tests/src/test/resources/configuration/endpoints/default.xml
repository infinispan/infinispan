<!-- Configure endpoints to use socket bindings and security realms. -->
<endpoints xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="urn:infinispan:server:12.0 https://infinispan.org/schemas/infinispan-server-12.0.xsd"
           xmlns="urn:infinispan:server:12.0"
           socket-binding="default">
   <!-- Name Hot Rod and REST endpoint connectors. -->
   <hotrod-connector name="hotrod"/>
   <rest-connector name="rest"/>
   <!-- Name the Memcached endpoint connector and specify the socket binding with the unique port. -->
   <memcached-connector socket-binding="memcached"/>
</endpoints>
