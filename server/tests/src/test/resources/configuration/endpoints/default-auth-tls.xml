<!-- Configure endpoints to use socket bindings and security realms. -->
<endpoints xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="urn:infinispan:server:12.0 https://infinispan.org/schemas/infinispan-server-12.0.xsd"
           xmlns="urn:infinispan:server:12.0"
           socket-binding="default" security-realm="default">
   <!-- Configure Hot Rod and REST endpoint connectors to authenticate users with property realms and present clients with SSL/TLS certificates for encryption. Specify authentication mechanisms that each protocol supports. -->
   <hotrod-connector name="hotrod">
      <authentication>
         <sasl mechanisms="SCRAM-SHA-512 SCRAM-SHA-384 SCRAM-SHA-256 SCRAM-SHA-1 DIGEST-SHA-512 DIGEST-SHA-384 DIGEST-SHA-256 DIGEST-SHA DIGEST-MD5 CRAM-MD5 PLAIN"
               server-name="infinispan"/>
      </authentication>
   </hotrod-connector>
   <rest-connector name="rest"/>
</endpoints>
