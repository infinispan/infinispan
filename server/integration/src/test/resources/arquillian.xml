<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="tomcat9">
        <configuration>
            <property name="tomcatHome">${tomcatHome}</property>
            <property name="unpackArchive">true</property>
            <property name="javaVmArguments">
                -Dserver.output.dir=${server.output.dir}
            </property>
        </configuration>
    </container>
    <container qualifier="wildfly18">
        <configuration>
            <property name="jbossHome">${jbossHome}</property>
            <property name="javaHome">${server.jvm}</property>
            <property name="javaVmArguments">
                ${server.jvm.args}
                -Dserver.output.dir=${server.output.dir}
                -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=n
            </property>
        </configuration>
    </container>
</arquillian>