        <subsystem xmlns="urn:infinispan:server:core:6.0" >
            <cache-container 
                name="local"
                default-cache="testcache">
                <local-cache
                    name="testcache"
                    start="EAGER"
                    batching="false"
                    >
                    <transaction mode="NONE" />
                </local-cache>
                <!-- to get a memcached module to work, there needs to be a named cache called "memcachedCache" -->
                <local-cache
                    name="memcachedCache"
                    start="EAGER"
                    batching="false"
                    >
                    <transaction mode="NONE" />
                </local-cache>
                <local-cache
                    name="namedCache"
                    start="EAGER" />
            </cache-container>
            <cache-container name="security"/>
        </subsystem>
