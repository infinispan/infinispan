       <subsystem xmlns="urn:infinispan:server:core:6.0" >
            <cache-container name="local" default-cache="default" start="EAGER">
                <local-cache
                    name="memcachedCache"
                    start="EAGER"
                    batching="false"
                    >
                    <transaction mode="NONE" />
                    <string-keyed-jdbc-store datasource="${jndi.name}" passivation="false" preload="true" purge="false" name="${table.prefix}_MEMCACHED">
                        <!--  the prefix must be unique for each jdbc cache store tests submodule so that each
                              test uses its own DB table -->
                        <string-keyed-table prefix="${table.prefix}">
                            <id-column name="id" type="${id.column.type}"/>
                            <data-column name="datum" type="${data.column.type}"/>
                            <timestamp-column name="version" type="${timestamp.column.type}"/>
                        </string-keyed-table>
                    </string-keyed-jdbc-store>
                </local-cache>
                <local-cache
                        name="default"
                        start="EAGER"
                        batching="false"
                        >
                    <transaction mode="NONE" />
                    <string-keyed-jdbc-store datasource="${jndi.name}" passivation="false" preload="true" purge="false" name="${table.prefix}_DEFAULT">
                        <!--  the prefix must be unique for each jdbc cache store tests submodule so that each
                              test uses its own DB table -->
                        <string-keyed-table prefix="${table.prefix}">
                            <id-column name="id" type="${id.column.type}"/>
                            <data-column name="datum" type="${data.column.type}"/>
                            <timestamp-column name="version" type="${timestamp.column.type}"/>
                        </string-keyed-table>
                    </string-keyed-jdbc-store>
                </local-cache>
            </cache-container>
           <cache-container name="security"/>
        </subsystem>