        <subsystem xmlns="urn:infinispan:server:core:8.0" >
            <cache-container 
                name="clustered"
                default-cache="testcache">
                <transport
                    lock-timeout="240000"/>
                <replicated-cache 
                    name="testcache"
                    start="EAGER" 
                    mode="SYNC"
                    batching="false"
                    remote-timeout="60000">
                    <transaction mode="NONE" />
                    <state-transfer
                        enabled="true"
                        timeout="60000" />
                </replicated-cache>
                <!-- to get a memcached module to work, there needs to be a named cache called "memcachedCache" -->
                <replicated-cache 
                    name="memcachedCache"
                    start="EAGER" 
                    mode="SYNC"
                    batching="false"
                    remote-timeout="60000">
                    <transaction mode="NONE" />
                    <state-transfer 
                        enabled="true"
                        timeout="60000" />
                </replicated-cache>
                <replicated-cache
                    name="namedCache"
                    start="EAGER"
                    mode="SYNC" />
            </cache-container>
            <cache-container name="security"/>
        </subsystem>
