        <subsystem xmlns="urn:infinispan:server:core:8.0" >
            <cache-container 
                name="clustered"
                default-cache="testcache">
                <transport
                    lock-timeout="240000"/>
                <distributed-cache 
                    name="testcache"
                    start="EAGER"
                    mode="SYNC" 
                    segments="1" 
                    owners="2" 
                    batching="false"
                    l1-lifespan="0" 
                    remote-timeout="60000" >
                    <transaction mode="NONE" />
                    <state-transfer 
                        enabled="true" 
                        timeout="600000" />
                </distributed-cache>
                <!-- to get a memcached module to work, there needs to be a named cache called "memcachedCache" -->
                <distributed-cache 
                    name="memcachedCache" 
                    start="EAGER"
                    mode="SYNC" 
                    segments="1" 
                    owners="2" 
                    batching="false"
                    l1-lifespan="0" 
                    remote-timeout="60000" >
                    <transaction mode="NONE" />
                    <state-transfer 
                        enabled="true" 
                        timeout="600000" />
                </distributed-cache>
                <distributed-cache
                    name="namedCache"
                    start="EAGER"
                    mode="SYNC" />
            </cache-container>
            <cache-container name="security"/>
        </subsystem>
