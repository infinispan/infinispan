        <subsystem xmlns="urn:infinispan:server:core:${infinispan.core.schema.version}" >
            <cache-container name="clustered" default-cache="default">
                <transport lock-timeout="240000"/>
                <distributed-cache
                        name="default"
                        segments="60"
                        owners="2"
                        batching="false"
                        l1-lifespan="0"
                        remote-timeout="30000" >
                    <locking
                            acquire-timeout="30000"
                            concurrency-level="1000"
                            striping="false" />
                    <state-transfer
                            enabled="true"
                            timeout="60000"
                            await-initial-transfer="false"/>
                </distributed-cache>
                <distributed-cache
                        name="memcachedCache"
                        segments="60"
                        owners="2"
                        batching="false"

                        l1-lifespan="0"
                        remote-timeout="30000" >
                    <locking
                            acquire-timeout="30000"
                            concurrency-level="1000"
                            striping="false" />
                    <state-transfer
                            enabled="true"
                            timeout="60000"
                            await-initial-transfer="false" />
                </distributed-cache>
            </cache-container>
        </subsystem>
