                        <prefix path="multi-tenancy-1" />
                    </rest>
                    <rest name="multi-tenant-rest-2">
                        <prefix path="multi-tenancy-2" />
                    </rest>
                </multi-tenancy>
            </router-connector>
        </subsystem>
