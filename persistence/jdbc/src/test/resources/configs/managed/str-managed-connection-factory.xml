<?xml version="1.0" encoding="UTF-8"?>
<infinispan>

   <cache-container default-cache="default">
      <local-cache name="default">
         <persistence>
            <string-keyed-jdbc-store xmlns="urn:infinispan:config:store:jdbc:8.0" fetch-state="false" read-only="false" purge="false">
               <data-source jndi-url="java:/StringStoreWithManagedConnectionTest/DS" />
               <string-keyed-table drop-on-exit="true" create-on-start="true" prefix="ISPN_STRING_TABLE">
                  <id-column name="ID_COLUMN" type="VARCHAR(255)" />
                  <data-column name="DATA_COLUMN" type="BINARY" />
                  <timestamp-column name="TIMESTAMP_COLUMN" type="BIGINT" />
               </string-keyed-table>
            </string-keyed-jdbc-store>
         </persistence>
      </local-cache>
      <local-cache name="first"/>
      <local-cache name="second"/>
   </cache-container>

</infinispan>
